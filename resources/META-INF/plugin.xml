<idea-plugin>
    <id>com.sharedaka.idea.swagger-helper</id>
    <name>swagger-helper</name>
    <vendor email="yanlishao336@gmail">Sharedaka</vendor>

    <description>选中类名或方法名 -> generate code -> generate swagger annotation</description>
    <version>0.0.4</version>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
<!--    <depends>com.intellij.spring</depends>-->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <projectConfigurable instance="com.sharedaka.ui.config.SwaggerHelperSetting"/>
        <projectService
                serviceImplementation="com.sharedaka.config.SwaggerHelperConfig"/>
        <projectService
                serviceImplementation="com.sharedaka.core.SwaggerHelperApplicationManager"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="com.sharedaka.action.SwaggerAnnotationGenerateAction" class="com.sharedaka.action.SwaggerAnnotationGenerateAction" text="generate swagger annotation"
                description="generate swagger annotation">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>